{
  "openapi": "3.0.0",
  "info": {
    "title": "Sample API",
    "description": "A sample API to illustrate OpenAPI concepts.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://{host}/{basePath}:{port}",
      "description": "Sample server",
      "variables": {
        "environment": { "default": "dev", "enum": ["dev", "staging", "prod"] },
        "host": { "default": "0.0.0.0" },
        "basePath": { "default": "api" },
        "port": { "default": "8080" }
      }
    }
  ],
  "paths": {
    "/films": {
      "get": {
        "summary": "Get a list of films",
        "operationId": "getFilms",
        "parameters": [
          {
            "in": "header",
            "name": "api-version",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "A JSON array of films",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Film" }
                }
              }
            }
          },
          "400": { "description": "Bad request" },
          "500": { "description": "Internal server error" }
        }
      },
      "post": {
        "summary": "Add a film to list",
        "operationId": "addFilm",
        "parameters": [
          {
            "in": "header",
            "name": "api-version",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "description": "Add a new film in the store",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Film" }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "A JSON array of films",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Films" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Film": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" }
        }
      },
      "Films": {
        "type": "array",
        "items": { "$ref": "#/components/schemas/Film" }
      }
    }
  }
}
